<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tinyMce="urn:import:org.ednovo.gooru.client.ui">
    <g:HTMLPanel>
    <g:FocusPanel ui:field="focusPanel" styleName="Uc-editableField">
        <g:HTMLPanel>
	        <g:DeckPanel ui:field="deckPanel">
	            <g:HTML ui:field="html"/>
	            <g:TextArea styleName="edit" ui:field="textArea"/>
	        </g:DeckPanel>
	        <g:Label ui:field="lblErrorMessage" styleName="Uc-errorValidationClassPage"/>
        </g:HTMLPanel>
    </g:FocusPanel>
    <g:HTMLPanel ui:field="duplicateTinyMce">
        <g:HTMLPanel styleName="Uc-displayNone" ui:field="fakeContent"></g:HTMLPanel>
    	<tinyMce:TinyMCE styleName="Uc-displayNone" characterLimit="0"></tinyMce:TinyMCE>
    </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>