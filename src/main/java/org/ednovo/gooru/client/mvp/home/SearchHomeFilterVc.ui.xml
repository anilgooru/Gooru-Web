<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:with type="org.ednovo.gooru.application.client.home.HomeCBundle" field="res" />
	<g:HTMLPanel styleName="grid_16">
		<div class="{res.css.filterContainer} grid_16">
			<div class="{res.css.filterArrow}"></div>
			<div class="{res.css.filterInnerContent}">
				<h3 class="{res.css.filterHeader}"><g:Label ui:field="filterOptionsLbl"></g:Label></h3>
				<g:FlowPanel styleName="{res.css.filterSection}" ui:field="filterGradeFloPanel"/>
				<div class="{res.css.filterSectionTextbox}">
					<g:Label styleName="{res.css.filterSubHeader}" ui:field="standardText"></g:Label>
					<g:SuggestBox text="" styleName="{res.css.filterSuggestBox}" ui:field="filterStandard"></g:SuggestBox>
				</div>
				<g:FlowPanel>
					<g:FlowPanel styleName="{res.css.filterSectionTypes}" ui:field="filterColOneResourceTypeFloPanel"/>

					<g:FlowPanel styleName="{res.css.filterSectionTypes} {res.css.filterLeftSection}" ui:field="filterColTwoResourceTypeFloPanel"/>

				</g:FlowPanel>

				<div class="{res.css.filterSectionTextbox}">
					<g:Label styleName="{res.css.filterSubHeader}" ui:field="sourceLbl"></g:Label>
					<g:SuggestBox text="" styleName="{res.css.filterSuggestBox}" ui:field="filterSource"></g:SuggestBox>
				</div>
				<g:FlowPanel styleName="{res.css.filterSection}" ui:field="filterSubjectFloPanel"/>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>