<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.ednovo.gooru.application.client.home.HomeCBundle" field="res" />
	<ui:style>
		.guideInfoArrow{
			background: url("images/Collection-Search/standards-arrow.png") repeat scroll -96px -98px transparent;
		    float: right;
  			height: 11px;
    		position: relative;
    		right: 62px;
    		top: -14px;
    		width: 26px;
		}

		.logoutText {
			height: 16px !important;
			font-size: 13px !important;
			margin-left: 2px !important;
			color: #515151 !important;
			cursor: pointer !important;
			float: left;
		}

		.logPanel {
			height: 50px;
			cursor: pointer !important;
		}
	</ui:style>
		<g:FlowPanel ui:field="logPanel" styleName="{style.logPanel}">
			<g:Label styleName="{style.guideInfoArrow}"/>
			<g:Label styleName="{style.logoutText}" ui:field="tooltipText"/>
		</g:FlowPanel>
</ui:UiBinder>